
<div>
  <%= link_to "New official", official_formulario_path%>
  <br>
</div>


<div class="span4">

  <div id="search_official">
    <%=form_tag(official_list_path, method:"get") do %>
    <%=text_field_tag :search, params[:search] %>
    <%=submit_tag"Buscar", :class=>'btn btn-primary' %>
      <% end %>
  </div>

  <h3>Lista de funcionarios</h3>
  <table class="table table-bordered">
    <thead>
    <tr>

      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Cedula</th>
      <th>Cargo </th>
      <th>Accion</th>
    </tr>
    </thead>

    <tbody>
    <% if @official_list.empty? %>
      <tr>
        <td colspan="4"> No se encontaron funcionarios</td>
      </tr>
    <% else %>
      <%=render"list_funcionario", mi_list_funcionario: @official_list %>
    <%end %>
    </tbody>

  </table>
</div>
